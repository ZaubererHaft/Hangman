<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/orange"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="teamfmg.hangman.Options"
    android:id="@+id/relLayout_options">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_header_options"
        android:id="@+id/text_header_options"
        android:textSize="@dimen/textSizeBig"
        android:textColor="@color/color_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_x"
        android:id="@+id/options_close"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:onClick="onClick"
        android:capitalize="characters"
        android:background="@null"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="@dimen/textSizeDouble"
        android:textSize="@dimen/textSizeBig"
        android:minHeight="@dimen/textSizeDouble"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_ownWords"
        android:id="@+id/button_ownWords"
        android:textSize="@dimen/textSizeMedium"
        android:layout_toEndOf="@+id/button_about"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:minHeight="@dimen/button_height"
        android:layout_below="@+id/text_header_options"
        android:layout_marginTop="@dimen/marginToHeader" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_options_categories"
        android:id="@+id/button_options_categories"
        android:minHeight="@dimen/button_height"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/button_ownWords"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_video"
        android:id="@+id/button_video"
        android:layout_below="@+id/button_options_categories"
        android:layout_alignParentLeft="true"
        android:minHeight="@dimen/button_height"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_options_music"
        android:id="@+id/button_options_music"
        android:layout_below="@+id/button_video"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:minHeight="@dimen/button_height"
        android:textSize="@dimen/textSizeMedium" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttons_about"
        android:id="@+id/button_about"
        android:textSize="@dimen/textSizeMedium"
        android:minHeight="@dimen/button_height"
        android:layout_below="@+id/button_options_music"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/options_checkForUpdate"
        android:id="@+id/options_checkForUpdate"
        android:textSize="@dimen/textSizeMedium"
        android:minHeight="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
