<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/purple"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu"
    android:id="@+id/relLayout_mainMenu">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_options"
        android:id="@+id/button_options"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/button_multiplayer"
        android:layout_alignEnd="@+id/text_headder"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:minHeight="@dimen/button_height"
        android:singleLine="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_exit"
        android:id="@+id/button_exit"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:minHeight="@dimen/button_height"
        android:singleLine="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_multiplayer"
        android:id="@+id/button_multiplayer"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/button_play"
        android:layout_alignEnd="@+id/button_options"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:minHeight="@dimen/button_height"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_header"
        android:id="@+id/text_headder"
        android:textSize="@dimen/textSizeBig"
        android:textColor="@color/color_white"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_play"
        android:id="@+id/button_play"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/text_headder"
        android:layout_alignStart="@+id/button_multiplayer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:minHeight="@dimen/button_height"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="@dimen/marginToHeader"
        android:singleLine="true" />

</RelativeLayout>
