<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="teamfmg.hangman.StatisticMenu"
    android:background="@drawable/orange"
    android:id="@+id/relLayout_statistic">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_x"
        android:id="@+id/statistic_close"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:onClick="onClick"
        android:capitalize="characters"
        android:background="@null"
        android:gravity="center_vertical|center_horizontal"
        android:minWidth="@dimen/textSizeDouble"
        android:textSize="@dimen/textSizeBig"
        android:minHeight="@dimen/textSizeDouble"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_header_account"
        android:textSize="@dimen/textSizeBig"
        android:textColor="@color/color_white"
        android:layout_alignTop="@+id/statistic_close"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistic_hadder"
        android:id="@+id/label_statistic_header"
        android:textColor="@color/color_white"
        android:textIsSelectable="false"
        android:textSize="@dimen/textSizeBig"
        android:layout_alignTop="@+id/statistic_close"
        android:layout_toRightOf="@+id/text_header_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistic_wins"
        android:id="@+id/label_statistic_wins"
        android:layout_below="@+id/statistic_close"
        android:layout_alignParentLeft="true"
        android:textColor="@color/color_white"
        android:layout_marginTop="@dimen/marginToHeader"
        android:textSize="@dimen/textSizeMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistic_lose"
        android:id="@+id/label_statistic_loses"
        android:layout_below="@+id/label_statistic_wins"
        android:layout_alignParentLeft="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/label_statistic_loses_amount"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_toRightOf="@+id/label_statistic_loses"
        android:layout_alignTop="@+id/label_statistic_loses"
        android:layout_marginLeft="@dimen/marginForSpace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/label_statistic_wins_amount"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignTop="@+id/label_statistic_wins"
        android:layout_toRightOf="@+id/label_statistic_wins"
        android:layout_marginLeft="@dimen/marginForSpace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistc_correctLetters"
        android:id="@+id/label_statistic_correctLetters"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/label_statistic_loses"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistic_wrongLetters"
        android:id="@+id/label_statistic_wrongLetters"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/label_statistic_correctLetters"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/label_statistic_correctLetters_amount"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignTop="@+id/label_statistic_correctLetters"
        android:layout_toRightOf="@+id/label_statistic_correctLetters"
        android:layout_marginLeft="@dimen/marginForSpace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/label_statistic_wrongLetters_amount"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_toRightOf="@+id/label_statistic_wrongLetters"
        android:layout_alignTop="@+id/label_statistic_wrongLetters"
        android:layout_marginLeft="@dimen/marginForSpace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistic_scoreStandardMode"
        android:id="@+id/label_statistic_scoreStandardMode"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/label_statistic_wrongLetters"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/label_statistic_scoreStandardMode_amount"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignTop="@+id/label_statistic_scoreStandardMode"
        android:layout_toRightOf="@+id/label_statistic_scoreStandardMode"
        android:layout_marginLeft="@dimen/marginForSpace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistic_scoreHardcoreMode"
        android:id="@+id/label_statistic_scoreHardcoreMode"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/label_statistic_scoreStandardMode"
        android:layout_toRightOf="@+id/text_header_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/label_statistic_scoreHardcoreMode_amount"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignTop="@+id/label_statistic_scoreHardcoreMode"
        android:layout_toRightOf="@+id/label_statistic_scoreHardcoreMode"
        android:layout_marginLeft="@dimen/marginForSpace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistic_scoreSpeedMode"
        android:id="@+id/label_statistic_scoreSpeedMode"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/label_statistic_scoreHardcoreMode"
        android:layout_toRightOf="@+id/text_header_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/label_statistic_scoreSpeedMode_amount"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/label_statistic_scoreHardcoreMode"
        android:layout_toRightOf="@+id/label_statistic_scoreSpeedMode"
        android:layout_marginLeft="@dimen/marginForSpace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/label_statistic_lastOnline_time"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_below="@+id/label_statistic_scoreSpeedMode"
        android:layout_alignParentLeft="false"
        android:layout_toRightOf="@+id/label_statistic_lastOnline"
        android:layout_marginLeft="@dimen/marginForSpace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_statistic_lastOnline"
        android:id="@+id/label_statistic_lastOnline"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSizeMedium"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/label_statistic_scoreSpeedMode" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/statistic_diagram_layout1"
        android:layout_below="@+id/label_statistic_lastOnline"
        android:layout_alignParentLeft="true">

    </RelativeLayout>

</RelativeLayout>
