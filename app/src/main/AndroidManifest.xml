<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="teamfmg.hangman" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />


    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"

        android:versionCode="1"

        android:exported="true"
        android:icon="@mipmap/hangman_logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        android:largeHeap="true">
        <activity
            android:name=".LoginMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterMenu"
            android:label="@string/title_activity_register_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Options"
            android:label="@string/title_activity_options"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Singleplayer"
            android:label="@string/title_activity_options"
            android:screenOrientation="portrait" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Category"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicMenu"
            android:label="@string/title_activity_music_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LayoutMenu"
            android:label="@string/title_activity_layout_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OwnWordsMenu"
            android:label="@string/title_activity_own_words_menu"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Statistic"
            android:label="@string/title_activity_own_words_menu"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AccountMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Achievements"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChangePassword"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MultiplayerMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BluetoothMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SingleplayerMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Scoreboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ScoreboardTab"
            android:screenOrientation="portrait" />
    </application>

</manifest>
