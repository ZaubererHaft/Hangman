<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="teamfmg.hangman">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:exported="true"
        android:icon="@mipmap/hangman_logo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity
            android:name=".LoginMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterMenu"
            android:label="@string/title_activity_register_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Options"
            android:label="@string/title_activity_options"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Singleplayer"
            android:label="@string/title_activity_options"
            android:screenOrientation="portrait" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Category"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MusicMenu"
            android:label="@string/title_activity_music_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LayoutMenu"
            android:label="@string/title_activity_layout_menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OwnWordsMenu"
            android:label="@string/title_activity_own_words_menu"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Statistic"
            android:label="@string/title_activity_own_words_menu"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".AccountMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Achievements"
            android:screenOrientation="portrait" />
        <activity android:name=".ChangePassword"></activity>
    </application>

</manifest>
